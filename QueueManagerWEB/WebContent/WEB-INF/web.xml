		<display-name>QueueMonitorServlet</display-name>
		<servlet-name>QueueMonitorServlet</servlet-name>
		<servlet-class>th.co.queuemanager.servlet.QueueMonitorServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>StimulateQueueControllerServlet</servlet-name>
