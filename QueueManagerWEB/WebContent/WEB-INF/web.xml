		<url-pattern>/ClaimSystemCallbackServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QueueMonitorServlet</servlet-name>
		<url-pattern>/QueueMonitorServlet</url-pattern>
	</servlet-mapping>
	
